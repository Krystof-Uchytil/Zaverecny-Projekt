<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/club"
            android:minHeight="48dp"
            android:autofillHints="club"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/et_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/height"
            android:inputType="number"
            android:minHeight="48dp"
            android:autofillHints="height (cm)"
            android:textColor="@color/black"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/weight"
            android:inputType="number"
            android:minHeight="48dp"
            android:autofillHints="weight (kg)"
            android:textColor="@color/black"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/et_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pref"
            android:minHeight="48dp"
            android:autofillHints="pref"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/et_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/level"
            android:minHeight="48dp"
            android:autofillHints="level"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/white"/>

        <Button
            android:id="@+id/btn_save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
